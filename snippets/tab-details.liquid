<section class="pro_vid_img_sec mrk-tab-image-with-text">
    <div class="page-width">
        <div class="pro_vid_img_row">
            <div class="text_box">
                <p class="caption">{{ block.settings.caption | escape }}</p>  
                <h2>{{ block.settings.heading | escape }}</h2>
                <h3 class="subheading">{{ block.settings.subheading | escape }}</h3>
                <div class="image-with-text__text rte">{{ block.settings.text }}</div>
                <div class="three-points">
                    <div class="point">{{ block.settings.point1 }}</div>
                    <div class="point">{{ block.settings.point2 }}</div>
                    <div class="point">{{ block.settings.point3 }}</div>
                </div>
                <div class="icon-with-text">
                    <div class="inner-tab-icon-with-text">
                        {%- for i in (1..4) -%}
                            {%- capture title -%}icon_text{{i}}{%- endcapture -%}
                            {%- capture icon -%}icon{{i}}{%- endcapture -%}
                            <div class="text-icon-item">
                                <div class="icon"><img src="{{block.settings[icon] | img_url: 'master'}}"></div>
                                <div class="icon-text">{{block.settings[title]}}</div>
                            </div>
                        {%- endfor -%}
                    </div>
                </div>
            </div>
             <div class="vid_img_box">
                <iframe width="100%" height="100%" frameborder="0" allow="fullscreen; picture-in-picture"
                    title="vimeo Video Player"
                    src="{{block.settings.video_url}}"></iframe>
            </div>
            
        </div>
    </div>
    {% if block.settings.sub_text != blank %}
        <div class="row disclaimer-row" style="background-color: #f15d5d;">
            <div class="disclaimer-text">{{ block.settings.sub_text }}</div>
        </div>
    {% endif %}
</section>